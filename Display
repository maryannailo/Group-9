import java.util.Scanner;

public class Display {

    public void displayWelcome() {
        System.out.println("Welcome to Cascadia!");
        System.out.println("");
        System.out.println("The aim of the game is to create the most harmonious ecosystem by selecting and adding habitats and wildlife to your environment.");
        System.out.println("This is done by placing habitat tokens between pil"); // continue summary of rules

    }


    public void displayMenu() {
        System.out.println("What would you like to do?");
        System.out.println("1. Play turn");
        System.out.println("2. Next player");
        System.out.println("3. Quit");
    }
    
    public void displayNatureTokenMenu() {
        System.out.println("Would you like to use your nature token to:");
        System.out.println("1. Select any wildlife and habitat token.");
        System.out.println("2. Wipe any number of wildlife tokens.");
        System.out.println("Please enter 1 or 2.");
    }

    public void displayPlayNotPossible () {
        System.out.println("That play is not possible. Try again.");
    }

    public void displayCommandNotPossible () {
        System.out.println("Invalid command. Please enter 1, 2, or 3.");
    }

    public void displayQuit () {
        System.out.println("Thank you for playing Cascadia!");
        System.out.println("Quit.");
    }

    public void displayRotationRules(){
        System.out.println("Each number corresponds to a different tile combination");
        System.out.println("Case 1: Forest and Prairie Tile");
        System.out.println("Case 2: Forest and Wetland Tile");
        System.out.println("Case 3: Wetland and Prairie Tile");
        System.out.println("Case 4: Wetland and Mountain Tile");
        System.out.println("Case 5: Prairie and Mountain Tile");
        System.out.println("Case 6: Wetland and River Tile");
        System.out.println("Case 7: Mountain and River Tile");
        System.out.println("Case 8: River and Forest Tile");
        System.out.println("Case 9: Prairie and River Tile");
        System.out.println("Case 10: Mountain and Forest Tile");

    }
}
